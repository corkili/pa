<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>personal-assistant</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../conf</directory>
            <outputDirectory>/conf</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/../pa-common/target/pa-common-${project.version}.jar</source>
            <outputDirectory>/lib</outputDirectory>
            <destName>pa-common-${project.version}.jar</destName>
        </file>
        <file>
            <source>${project.basedir}/../pa-core/target/pa-core-${project.version}.jar</source>
            <outputDirectory>/lib</outputDirectory>
            <destName>pa-core-${project.version}.jar</destName>
        </file>
        <file>
            <source>${project.basedir}/../pa-dao/target/pa-dao-${project.version}.jar</source>
            <outputDirectory>/lib</outputDirectory>
            <destName>pa-dao-${project.version}.jar</destName>
        </file>
        <file>
            <source>${project.basedir}/../pa-server/target/pa-server-${project.version}.jar</source>
            <outputDirectory>/lib</outputDirectory>
            <destName>pa-server-${project.version}.jar</destName>
        </file>
        <file>
            <source>${project.basedir}/../pa-validation/target/pa-validation-${project.version}.jar</source>
            <outputDirectory>/lib</outputDirectory>
            <destName>pa-validation-${project.version}.jar</destName>
        </file>

    </files>
</assembly>